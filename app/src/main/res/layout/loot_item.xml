<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="1sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_border">

        <ImageView
            android:id="@+id/image_view_card_upload"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/text_view_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:layout_toEndOf="@+id/image_view_card_upload"
            android:layout_toRightOf="@+id/image_view_card_upload"
            android:text="Line 1"
            android:textColor="#282828"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_card_item_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/image_view_card_upload"
            android:layout_alignStart="@id/image_view_card_upload"
            android:layout_centerVertical="true"
            android:layout_marginLeft="110dp"
            android:layout_marginStart="110dp"
            android:text="Line 2"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>