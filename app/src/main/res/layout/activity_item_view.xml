<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loot_main_bg"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_view_item"
        android:layout_width="187dp"
        android:layout_height="187dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/photo_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button_donate"
            android:layout_width="97dp"
            android:layout_height="43dp"
            android:background="@drawable/donate_button" />

        <Button
            android:id="@+id/button_recycle"
            android:layout_width="97dp"
            android:layout_height="43dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/recycle_button" />

        <Button
            android:id="@+id/button_sell"
            android:layout_width="97dp"
            android:layout_height="43dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/sell_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_view_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Name"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/text_view_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Description"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/text_view_item_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_edit"
            android:layout_width="157dp"
            android:layout_height="43dp"
            android:background="@drawable/reset_timer" />

        <Button
            android:id="@+id/button_delete"
            android:layout_width="157dp"
            android:layout_height="43dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/delete_button" />
    </LinearLayout>
</LinearLayout>